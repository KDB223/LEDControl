<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dialog_about_title"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="by KDB"
        android:id="@+id/textView5"
        android:textSize="@dimen/md_button_textsize"
        android:layout_above="@+id/AboutContent"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dialog_about_content"
        android:id="@+id/AboutContent"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        style="@style/MD_Dark"
        android:textColor="@color/secondary_text_default_material_dark"
        android:textColorLink="@color/link_selector"
        android:clickable="true"
        android:linksClickable="true"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/dialog_about_footer"
        android:id="@+id/AboutFooter"
        android:layout_below="@+id/AboutContent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textSize="12dp"
        android:textColorLink="@color/link_selector"
        android:clickable="true"
        android:linksClickable="true" />
</RelativeLayout>