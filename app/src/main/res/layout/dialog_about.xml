<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dialog_about_cp"
        android:id="@+id/textView5"
        android:textSize="12sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dialog_about_content"
        android:id="@+id/AboutContent"
        style="@style/MD_Dark"
        android:textColor="@color/secondary_text_default_material_dark"
        android:textColorLink="@color/link_selector"
        android:clickable="true"
        android:linksClickable="true"
        android:textSize="15sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/dialog_about_footer"
        android:id="@+id/AboutFooter"
        android:layout_below="@+id/AboutContent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColorLink="@color/link_selector"
        android:clickable="true"
        android:linksClickable="true" />
</RelativeLayout>